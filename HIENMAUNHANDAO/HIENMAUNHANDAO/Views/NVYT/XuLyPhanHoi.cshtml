<script>
    function showTab(tabName) {
        // Toggle table visibility
        document.getElementById('pending-table').style.display = tabName === 'pending' ? 'table' : 'none';
        document.getElementById('processed-table').style.display = tabName === 'processed' ? 'table' : 'none';

        // Update active tab
        document.querySelectorAll('.tab').forEach(tab => {
            tab.classList.remove('active');
            if (tab.getAttribute('onclick').includes(tabName)) {
                tab.classList.add('active');
            }
        });
    }
</script>