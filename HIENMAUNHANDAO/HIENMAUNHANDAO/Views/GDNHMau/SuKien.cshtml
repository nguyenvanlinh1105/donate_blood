            font-weight: 600;
            margin: 0;
            color: #1d3557;
        }

    .badge {
        background-color: #62e874dd;
        padding: 5px 10px;
        font-size: 14px;
        font-weight: 600;
        border-radius: 20px;
    }

    .event-body {
        padding: 20px;
    }

        .event-body p {
            margin-bottom: 10px;
            color: #495057;
        }

        .event-body i {
            color: #e63946;
            width: 20px;
            text-align: center;
            margin-right: 5px;
        }

    .participants-count {
        background-color: #f1faee;
        padding: 15px;
        border-radius: 10px;
        border: 2px dashed #e63946;
    }

        .participants-count span {
            font-size: 32px;
            font-weight: 700;
            color: #e63946;
            display: block;
            line-height: 1;
        }

        .participants-count small {
            font-size: 14px;
            color: #6c757d;
        }

    .event-footer {
        padding: 15px 20px;
        background-color: #f8f9fa;
        border-top: 1px solid #eee;
        text-align: right;
    }

    .btn {
        padding: 8px 15px;
        font-size: 14px;
        font-weight: 600;
        border-radius: 5px;
        margin-left: 10px;
    }

    .btn-edit {
        background-color: #457b9d;
        color: white;
        border: none;
    }

        .btn-edit:hover {
            background-color: #1d3557;
            color: white;
        }

    .btn-approve {
        background-color: #2a9d8f;
        color: white;
        border: none;
    }

        .btn-approve:hover {
            background-color: #1d6f64;
            color: white;
        }

    .btn-cancel {
        background-color: #e76f51;
        color: white;
        border: none;
    }

        .btn-cancel:hover {
            background-color: #d04a2a;
            color: white;
        }

    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 30px;
    }

        .pagination a {
            color: #0051ad;
            padding: 8px 16px;
            text-decoration: none;
            border: 1px solid #ddd;
            margin: 0 4px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .pagination a:hover {
                background-color: #fe8687;
                color: white;
                border-color: #fe8687;
            }

            .pagination a.active {
                background-color: #fe8687;
                color: white;
                border-color: #fe8687;
            }

            .pagination a.disabled {
                color: #ccc;
                pointer-events: none;
                border-color: #ddd;
            }

