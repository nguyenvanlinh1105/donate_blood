        color: white;
        padding: 8px 16px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
    }

        .btn-primary:hover {
            background-color: rgb(26, 92, 167);
        }

    .btn-outline {
        color: #3498db;
        border: 1px solid #3498db;
        background: none;
        padding: 6px 12px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
    }

        .btn-outline:hover {
            background-color: #3498db;
            color: white;
        }

    .card {
        border: none;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        background-color: white;
        padding: 15px;
        margin-bottom: 20px;
    }

    .tabs {
        border-bottom: 2px solid #dee2e6;
        margin-bottom: 20px;
        display: flex;
    }

    .tab-link {
        color: #7f8c8d;
        padding: 10px 15px;
        cursor: pointer;
        border: none;
        background: none;
        font-size: 16px;
    }

        .tab-link.active {
            color: #e74c3c;
            border-bottom: 3px solid #e74c3c;
            font-weight: 500;
        }

    .table {
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
        width: 100%;
        border-collapse: collapse;
    }

        .table thead th {
            background-color: #dff1ff;
            color: #2c3e50;
            font-weight: 600;
            padding: 12px;
            text-align: left;
        }

        .table tbody tr:hover {
            background-color: rgba(52, 152, 219, 0.05);
        }

    .avatar-sm {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #ecf0f1;
    }

    .account-status {
        font-weight: 500;
        padding: 4px 10px;
        border-radius: 4px;
        font-size: 0.85rem;
    }

    .account-status-active {
        color: #27ae60;
        background-color: rgba(39, 174, 96, 0.1);
    }

    .account-status-inactive {
        color: #e74c3c;
        background-color: rgba(231, 76, 60, 0.1);
    }

    .toggle-switch {
        position: relative;
        display: inline-block;
        width: 34px;
        height: 20px;
    }

        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .toggle-slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        border-radius: 20px;
        transition: 0.4s;
    }

        .toggle-slider:before {
            position: absolute;
            content: "";
            height: 16px;
            width: 16px;
            left: 2px;
            bottom: 2px;
            background-color: white;
            border-radius: 50%;
            transition: 0.4s;
        }

    input:checked + .toggle-slider {
        background-color: #7fbdff;
    }

        input:checked + .toggle-slider:before {
            transform: translateX(14px);
        }

    .pagination {
        display: flex;
        justify-content: center;
        list-style: none;
        padding: 0;
        margin-top: 20px;
    }

    .page-item {
        margin: 0 5px;
    }

    .page-link {
        padding: 6px 12px;
        border: 1px solid #dee2e6;
        border-radius: 5px;
        color: #3498db;
        text-decoration: none;
        cursor: pointer;
    }

    .page-item.active .page-link {
        background-color: #e74c3c;
        border-color: #e74c3c;
        color: white;
    }

    .page-item.disabled .page-link {
        color: #7f8c8d;
        cursor: not-allowed;
    }

    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .modal-content {
        background-color: white;
        border-radius: 8px;
        width: 500px;
        max-width: 90%;
        overflow: hidden;
    }

    .modal-header {
        background-color: #ecf0f1;
        padding: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-title {
        color: #2c3e50;
        font-size: 18px;
        margin: 0;
    }

    .modal-close {
        background: none;
        border: none;
        font-size: 20px;
        cursor: pointer;
        color: #2c3e50;
    }

    .modal-body {
        padding: 15px;
    }

    .modal-footer {
        padding: 15px;
        text-align: right;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            color: #2c3e50;
        }

        .form-group input, .form-group select {
            width: 100%;
            padding: 8px;
            border: 1px solid #dee2e6;
            border-radius: 5px;
            outline: none;
        }

            .form-group input:focus, .form-group select:focus {
                border-color: #3498db;
                box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
            }

    .btn-danger {
        background-color: #e74c3c;
        border: none;
        color: white;
        padding: 8px 16px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }

    /* Ensure only active tab is visible */
    .tab-content {
        display: none;
    }

        .tab-content.active {
            display: block;
        }

    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
