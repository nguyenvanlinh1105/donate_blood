@model HIENMAUNHANDAO.ViewModel.LichSuHienMau_NguoiDungViewModel
@{
    Layout = "Layout_user";
}

<link href="~/css/user/user.css" rel="stylesheet" />
<div class="donation-history-page">
    <partial name="_AlertMessageSuccess" />
    <partial name="_AlertMessageError" />
    <div class="container">
        <div class="page-header">
            <h1><i class="fas fa-history"></i> Lịch sử hiến máu</h1>
            <p>Xem lại các lần đăng ký và hiến máu của bạn</p>
        </div>

        <div class="tab-container">
            <div class="tab-nav">
                <div class="tab-nav-item active" data-tab="upcoming">
                    <i class="fas fa-calendar-check"></i> Sắp diễn ra
                    <span class="badge">@Model.resutlDDK_SapDienRa.Count</span>
                </div>
                <div class="tab-nav-item" data-tab="completed">
                    <i class="fas fa-check-circle"></i> Đã diễn ra
                    <span class="badge">@Model.resutlDDK_DaDienRa.Count</span>
                </div>
            </div>

            <div class="tab-content active" id="upcoming-tab">
                @foreach(var item in Model.resutlDDK_SapDienRa)
                {
                    <div class="donation-card">
                        <div class="card-header">
                            <h3>@item.TenCoSoTinhNguyen</h3>
                            <div class="card-status upcoming">@item.TrangThaiDDK</div>
                        </div>
                        <div class="card-body">
                            <div class="info-row">
                                <i class="fas fa-map-marker-alt"></i>
                                <div>
                                    <strong>Địa điểm:</strong>
                                    @item.DiaChi
                                </div>
                            </div>
                            <div class="info-row">
                                <i class="far fa-clock"></i>
                                <div>
                                    <strong>Thời gian tổ chức:</strong>
                                    @item.ThGianBatDau?.ToString("dd/MM/yyyy HH:mm") đến @item.ThGianKetThuc?.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>
                            <div class="info-row">
                                <i class="fas fa-info-circle"></i>
                                <div>
                                    <strong>Ngày đăng kí:</strong>
                                    @item.NgayDangKi?.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>
                            <div class="action-buttons">
                                <a class="btn btn-view" asp-controller="User" asp-action="XemChiTietDonDangKi"
                                asp-route-IdDangKi="@item.IdDangKiHienMau" style="text-decoration: none;color: white;">
                                    <i class="fas fa-eye"></i>  Xem chi tiết</a>
                                @if(item.TrangThaiDDK=="Chưa duyệt")
                                {

                                    <a class="btn btn-cancel" asp-controller="User" asp-action="HuyDonDangKi" asp-route-idDangKiHienMau="@item.IdDangKiHienMau" style="text-decoration:none; color:#e74c3c;"
                                    onmouseover="this.style.color='#fff';"
                                    onmouseout="this.style.color='#e74c3c';">    <i class="fas fa-times"></i>Hủy đăng kí</a>

                                }
                            </div>
                        </div>
                    </div>
                }

            </div>

            <div class="tab-content" id="completed-tab">
                @foreach(var item in Model.resutlDDK_DaDienRa)
                {
                    if(item.TrangThaiDDK =="Hoàn thành")
                    {
                        <div class="donation-card completed">
                            <div class="card-header">
                                <h3>@item.TenCoSoTinhNguyen</h3>
                                <div class="card-status completed">@item.TrangThaiDDK</div>
                            </div>
                            <div class="card-body">
                                <div class="info-row">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <div>
                                        <strong>Địa điểm:</strong>
                                        @item.DiaChi
                                    </div>
                                </div>
                                <div class="info-row">
                                    <i class="far fa-clock"></i>
                                    <div>
                                        <strong>Thời gian tổ chức:</strong>
                                        @item.ThGianBatDau?.ToString("dd/MM/yyyy HH:mm") đến @item.ThGianKetThuc?.ToString("dd/MM/yyyy HH:mm")
                                    </div>

                                </div>
                                <div class="info-row">
                                    <i class="fas fa-heartbeat"></i>
                                    <div>
                                        <strong>Tình trạng sức khỏe sau hiến:</strong>
                                        <span class="health-status good">Tốt</span>
                                    </div>
                                </div>
                                <div class="info-row">
                                    <i class="fas fa-info-circle"></i>
                                    <div>
                                        <strong>Ngày đăng kí:</strong>
                                        @item.NgayDangKi?.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </div>
                                <div class="info-row">
                                    <i class="fas fa-info-circle"></i>
                                    <div>
                                        <strong>Ngày Hoàn thành:</strong>
                                        @item.NgaySua?.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </div>
                                <div class="info-row">
                                    <i class="fas fa-tint"></i>
                                    <div>
                                        <strong>Lượng máu hiến:</strong>
                                        @item.SoLuongMauHien
                                    </div>
                                </div>
                                <div class="action-buttons">
                                    <a class="btn btn-view" asp-controller="User" asp-action="XemChiTietDonDangKi" asp-route-IdDangKi="@item.IdDangKiHienMau" style="text-decoration: none;color: white;"> <i class="fas fa-eye"></i>  Xem chi tiết</a>


                                    <a class="btn btn-feedback" asp-controller="User" asp-action="PhanHoiSuCo" asp-route-IdDangKi="@item.IdDangKiHienMau" style="text-decoration: none;color: white;"> <i class="fas fa-comment-medical"></i>  Phản hồi sự cố</a>

                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="donation-card canceled">
                            <div class="card-header">
                                <h3>@item.TenCoSoTinhNguyen</h3>
                                <div class="card-status canceled">@item.TrangThaiDDK</div>
                            </div>
                            <div class="card-body">
                                <div class="info-row">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <div>
                                        <strong>Địa điểm:</strong>
                                        @item.DiaChi
                                    </div>
                                </div>
                                <div class="info-row">
                                    <i class="far fa-clock"></i>
                                    <div>
                                        <strong>Thời gian tổ chức:</strong>
                                        @item.ThGianBatDau?.ToString("dd/MM/yyyy HH:mm") đến @item.ThGianKetThuc?.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </div>
                                <div class="info-row">
                                    <i class="fas fa-comment"></i>
                                    <div>
                                        <strong>Ngày đăng kí:</strong>
                                        @item.NgayDangKi?.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </div>
                                <div class="info-row">
                                    <i class="fas fa-comment"></i>
                                    <div>
                                        <strong>Ngày hủy:</strong>
                                        @item.NgaySua?.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </div>
                                <div class="action-buttons">

                                    <a class="btn btn-view" asp-controller="User"
                                    asp-action="XemChiTietDonDangKi"
                                    asp-route-IdDangKi="@item.IdDangKiHienMau" style="text-decoration: none;color: white;"> <i class="fas fa-eye"></i>  Xem chi tiết</a>

                                    @if (item.ThGianBatDau >= DateTime.Now)
                                    {
                                        <a class="btn btn-view" asp-controller="Home" asp-action="DangKiHienMau" asp-route-IdSuKien="@item.IdSuKien " style="text-decoration: none;color: white; background:#7eba62">
                                            <i class="fas fa-hand-holding-heart"></i> Đăng ký lại
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
                

                
            </div>
        </div>
    </div>
</div>

<script>
    // Tab Navigation Functionality
    document.addEventListener('DOMContentLoaded', function() {
        const tabItems = document.querySelectorAll('.tab-nav-item');

        tabItems.forEach(item => {
            item.addEventListener('click', function() {
                // Remove active class from all tabs and contents
                document.querySelectorAll('.tab-nav-item').forEach(tab => {
                    tab.classList.remove('active');
                });
                document.querySelectorAll('.tab-content').forEach(content => {
                    content.classList.remove('active');
                });

                // Add active class to clicked tab
                this.classList.add('active');

                const tabId = this.getAttribute('data-tab');
                document.getElementById(`${tabId}-tab`).classList.add('active');
            });
        });

        // Animation for cards on scroll
        const animateOnScroll = function() {
            const cards = document.querySelectorAll('.donation-card');

            cards.forEach(card => {
                const cardPosition = card.getBoundingClientRect().top;
                const screenPosition = window.innerHeight / 1.2;

                if (cardPosition < screenPosition) {
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }
            });
        };

        // Set initial state for animation
        const cards = document.querySelectorAll('.donation-card');
        cards.forEach(card => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
        });

        window.addEventListener('scroll', animateOnScroll);
        animateOnScroll(); // Run once on load
    });
</script>