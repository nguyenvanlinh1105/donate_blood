
@{
    Layout = "Layout_user";
}

<link href="~/css/user/user.css" rel="stylesheet" />
<style>
    .profile-container {
        max-width: 1000px;
        margin: 50px auto 80px auto;
        padding: 30px 40px;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.05);
    }

        /* Tiêu đề chính */
        .profile-container h2 {
            font-size: 28px;
            font-weight: 700;
            color: #d32f2f;
            margin-bottom: 16px;
            border-bottom: 3px solid #ffcdd2;
            padding-bottom: 8px;
        }

        .profile-container p {
            font-size: 16px;
            color: #555;
            margin-bottom: 30px;
        }

    /* Căn lề và layout cho từng hàng form */
    .form-group {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 20px;
    }

        .form-group label {
            width: 25%;
            min-width: 180px;
            padding-right: 10px;
            font-weight: 600;
            color: #333;
            align-self: center;
        }

        .form-group input,
        .form-group select {
            flex: 1;
            padding: 10px 14px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 15px;
            transition: border-color 0.3s ease-in-out;
        }

            .form-group input:focus,
            .form-group select:focus {
                border-color: #d32f2f;
                outline: none;
            }

    /* Radio button layout */
    fieldset.form-group {
        border: none;
        margin-bottom: 20px;
    }

    fieldset .row {
        display: flex;
        align-items: center;
    }

    fieldset legend {
        width: 25%;
        min-width: 180px;
        font-weight: 600;
        color: #333;
    }

    .form-check-inline {
        margin-right: 20px;
    }

    /* Button */
    #saveBtn {
        background-color: #d32f2f;
        color: white;
        padding: 12px 30px;
        font-weight: 600;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        #saveBtn:hover {
            background-color: #b71c1c;
        }

</style>
<div class="profile-container" style="width: 80%;">
    <h2>HỒ SƠ CỦA TÔI</h2>
    <p>Quản lý thông tin hồ sơ để bảo mật tài khoản</p>

    <div id="profileForm">
        <div class="form-group">
            <label for="fullName">Họ và tên</label>
            <input type="text" id="fullName" value="Nguyễn Văn Linh" required>
        </div>

        <div class="form-group">
            <label for="phone">Số điện thoại</label>
            <input type="tel" id="phone" value="0123456789" required>
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" value="vanlinh@gmail.com" required>
        </div>

        <div class="form-group">
            <label for="citizenId">Số CCCD</label>
            <input type="text" id="citizenId" value="2340890323" required>
        </div>

        <div class="form-group">
            <label for="bloodType">Nhóm máu</label>
            <select id="bloodType" required>
                <option value="A">Nhóm máu A</option>
                <option value="B">Nhóm máu B</option>
                <option value="AB">Nhóm máu AB</option>
                <option value="O">Nhóm máu O</option>
            </select>
        </div>

        <fieldset class="form-group">
            <div class="row">
                <legend>Giới tính</legend>
                <div class="form-check-inline">
                    <input type="radio" name="gender" id="genderMale" value="Nam" checked>
                    <label for="genderMale">Nam</label>
                </div>
                <div class="form-check-inline">
                    <input type="radio" name="gender" id="genderFemale" value="Nữ">
                    <label for="genderFemale">Nữ</label>
                </div>
            </div>
        </fieldset>

        <div class="form-group">
            <label>Ngày sinh</label>
            <select id="day" style="width: 30%;">
                <option value="">Ngày</option>
                <script>
                    for (let i = 1; i <= 31; i++) {
                      document.write(`<option value="${i}">${i}</option>`);
                    }
                </script>
            </select>
            <select id="month" style="width: 30%;">
                <option value="">Tháng</option>
                <script>
                    for (let i = 1; i <= 12; i++) {
                      document.write(`<option value="${i}">${i}</option>`);
                    }
                </script>
            </select>
            <select id="year" style="width: 30%;">
                <option value="">Năm</option>
                <script>
                    for (let i = 2025; i >= 1900; i--) {
                      document.write(`<option value="${i}">${i}</option>`);
                    }
                </script>
            </select>
        </div>

        <div class="form-group">
            <label for="province">Tỉnh/Thành phố</label>
            <select id="province" required>
                <option value="">Chọn</option>
                <option>Hà Nội</option>
                <option>TP Hồ Chí Minh</option>
                <option>Đà Nẵng</option>
                <option>Hải Phòng</option>
            </select>
        </div>

        <div class="form-group">
            <label for="district">Quận/Huyện</label>
            <select id="district" required>
                <option value="">Chọn</option>
            </select>
        </div>

        <div class="form-group">
            <label for="ward">Phường/Xã</label>
            <select id="ward" required>
                <option value="">Chọn</option>
            </select>
        </div>

        <div class="form-group">
            <label for="street">Đường/Số nhà</label>
            <input type="text" id="street" placeholder="Đường/Số nhà">
        </div>

        <div class="form-group">
            <label></label>
            <button type="button" id="saveBtn">Lưu</button>
        </div>
    </div>
</div>