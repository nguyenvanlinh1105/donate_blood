@{
    Layout = "Layout_Home";
}
<link href="~/css/home/login.css" rel="stylesheet" />
<main>
    <partial name="_AlertMessageError" />
    <div class="login-container">
        <div class="login-card">
            <!-- Form Section -->
            <div class="login-form-section">
                <div class="login-header">
                    <img src="~/img/login/iconhienmau.png" alt="logo">
                    <h4>Hiến máu tình nguyện Đà Nẵng</h4>
                </div>
                <form class="login-form" asp-action="Login" method="post">
                    <p>Vui lòng nhập thông tin để đăng nhập</p>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="Email" placeholder="Nhập email?">
                        <span class="error-message" style="display: none; color: red;">Vui lòng nhập email</span>
                    </div>

                    <div class="form-group">
                        <label for="password">Mật khẩu</label>
                        <input type="password" id="password" name="Password" placeholder="Nhập mật khẩu?">
                        <span class="error-message" style="display: none; color: red;">Vui lòng nhập mật khẩu</span>
                    </div>

                    <button type="submit" class="login-btn">Đăng nhập</button>
                    <a href="#" class="forgot-password">Quên mật khẩu?</a>

                    <div class="account-type">
                        <div class="account-type-title">Chọn loại tài khoản</div>
                        <div class="radio-group">
                            <div class="radio-option">
                                <input type="radio"
                                       id="userAccount"
                                       name="accountType"
                                       value="userAccount"
                                       checked>
                                <label for="userAccount">Tài khoản người dùng</label>
                            </div>
                            <div class="radio-option">
                                <input type="radio"
                                       id="orgAccount"
                                       name="accountType"
                                       value="orgAccount">
                                <label for="orgAccount">Tài khoản cơ sở tình nguyện</label>
                            </div>
                        </div>
                    </div>

                    <div class="register-section">
                        <span class="register-text">Bạn chưa có tài khoản?</span>
                        <button type="button" class="register-btn">Đăng ký</button>
                    </div>
                </form>
            </div>

            <!-- Banner Section -->
            <div class="login-banner-section">
                <div class="banner-content">
                    <img style="width: 250px;" src="~/img/logo/iconheart.png" alt="logo">
                    <h4>Hiến máu – nghĩa cử cao đẹp</h4>
                    <p>
                        Mỗi giọt máu bạn cho đi là một cơ hội sống quý giá cho những người đang cần.
                        Hiến máu tình nguyện tại Đà Nẵng là hoạt động thường xuyên nhằm hỗ trợ các bệnh viện trong việc cứu chữa bệnh nhân.
                        Hãy cùng chung tay lan tỏa yêu thương, trao đi sự sống bằng hành động nhỏ nhưng ý nghĩa này.
                    </p>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.querySelector('.login-form');
            const emailInput = document.querySelector('#email');
            const passwordInput = document.querySelector('#password');
            const emailError = emailInput.nextElementSibling;
            const passwordError = passwordInput.nextElementSibling;

            // Hide error message when user types in email field
            emailInput.addEventListener('input', function () {
                if (emailInput.value.trim()) {
                    emailError.style.display = 'none';
                }
            });

            // Hide error message when user types in password field
            passwordInput.addEventListener('input', function () {
                if (passwordInput.value.trim()) {
                    passwordError.style.display = 'none';
                }
            });

            form.addEventListener('submit', function (event) {
                let isValid = true;

                // Reset error messages
                emailError.style.display = 'none';
                passwordError.style.display = 'none';

                // Check if email is empty
                if (!emailInput.value.trim()) {
                    isValid = false;
                    emailError.style.display = 'block';
                }

                // Check if password is empty
                if (!passwordInput.value.trim()) {
                    isValid = false;
                    passwordError.style.display = 'block';
                }

                // Prevent form submission if validation fails
                if (!isValid) {
                    event.preventDefault();
                }
            });
        });
    </script>
</main>